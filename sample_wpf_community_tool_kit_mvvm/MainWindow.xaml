<Window x:Class="sample_wpf_community_tool_kit_mvvm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:sample_wpf_community_tool_kit_mvvm.ViewModels"
        xmlns:views="clr-namespace:sample_wpf_community_tool_kit_mvvm.Views"
        mc:Ignorable="d"
        Title="Sample MVVM App"
        Height="450"
        Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ScreenAViewModel}">
            <views:ScreenA />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ScreenBViewModel}">
            <views:ScreenB />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#FF2D2D30"
                Padding="12">
            <DockPanel LastChildFill="False">
                <TextBlock DockPanel.Dock="Left"
                           Text="メニュー"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,0,16,0"
                           VerticalAlignment="Center" />
                <StackPanel DockPanel.Dock="Left"
                            Orientation="Horizontal">
                    <Button Content="A"
                            Command="{Binding ShowScreenACommand}"
                            Width="120"
                            Margin="0,0,8,0" />
                    <Button Content="B"
                            Command="{Binding ShowScreenBCommand}"
                            Width="120" />
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="1"
                Background="White"
                Margin="12"
                CornerRadius="8"
                BorderBrush="#FFD0D0D0"
                BorderThickness="1">
            <ContentControl Content="{Binding CurrentScreen}" />
        </Border>
    </Grid>
</Window>
